<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <t t-name="ap_guesthouse_registration.RoomCard" owl="1">
        <div class="col-lg-3 m-0 p-0">
           <div class="shadow-sm border m-2 p-4 bg-white text-center cursor-pointer" t-on-click="()=>props.onClick(props.active_id)">
             <div class="h3 fw-bold text-dark"><span t-esc="props.roomno"></span></div>
             <div class="h3 text-muted"><span t-attf-class="text-#{ props.room_status === 'occupied' ? 'success':'danger' }" t-esc="props.room_status"></span></div>

           </div>
        </div>
    </t>
</templates>

